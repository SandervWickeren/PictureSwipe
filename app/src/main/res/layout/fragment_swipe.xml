<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false"
    tools:context="com.example.sander.pictureswipe.SwipeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <link.fls.swipestack.SwipeStack
                    android:id="@+id/swipeStack"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    app:stack_rotation="5"
                    app:stack_size="3">

                </link.fls.swipestack.SwipeStack>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/swipeColor"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00f10909">

                <ImageView
                    android:id="@+id/iconOverlay"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_delete_black_24dp"
                    android:alpha="0"
                    android:tint="#29ABA4"/>

            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="16"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/addBin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:background="@drawable/decline_btn"
            android:drawableTop="@drawable/ic_delete_black_24dp"
            android:drawableTint="@color/colorLight"
            android:layout_weight="1"
            android:text="Bin" />

        <Button
            android:id="@+id/addFavorite"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="5dp"
            android:background="@drawable/favorite_btn"
            android:layout_weight="1"
            android:drawableTint="@color/colorDarkBackground"
            android:drawableTop="@drawable/ic_grade_black_24dp" />

        <Button
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/accept_btn"
            android:drawableTop="@drawable/ic_check_black_24dp"
            android:drawableTint="@color/colorLight"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>
