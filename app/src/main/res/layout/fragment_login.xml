<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/colorDarkBackground"
    tools:context="com.example.sander.pictureswipe.LoginFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/colorLight"
        android:text="Login fragment" />

    <Button
        android:id="@+id/clearBin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear bin" />

    <Button
        android:id="@+id/clearPictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clear pictures" />

    <Button
        android:id="@+id/deepCleanPictures"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deep clean" />

    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorLight"
        android:text="Login" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Email"
        android:backgroundTint="@color/colorLight"
        android:textColorHint="@color/colorLight"
        android:textColor="@color/colorLight"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:ems="10"
        android:backgroundTint="@color/colorLight"
        android:textColorHint="@color/colorLight"
        android:textColor="@color/colorLight"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Register" />

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Login" />
    </LinearLayout>

</LinearLayout>
